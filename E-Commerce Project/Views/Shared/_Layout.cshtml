                    @User.Identity?.Name
                </li>
            </ul>

            <a asp-controller="Account" asp-action="Logout">Logout</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Register">Create Account</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action=""

        }

</nav>

    <div>
        @RenderBody()
    </div>

