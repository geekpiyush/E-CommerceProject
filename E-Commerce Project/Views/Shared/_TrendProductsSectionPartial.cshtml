<script>
    function startCountdown() {
        // Select all timer elements
        const timers = document.querySelectorAll('.timer');

        // Loop through each timer element
        timers.forEach(timer => {
            // Get the end time from the data attribute
            const endTime = new Date(timer.getAttribute('data-end-time')).getTime();

            // Create a unique interval for each timer
            const countdownInterval = setInterval(() => {
                // Get the current time
                const now = new Date().getTime();

                // Calculate the time difference between now and the end time
                const timeDifference = endTime - now;

                // Calculate the time components (days, hours, minutes, seconds)
                const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

                // Update the countdown display for this specific timer
                const countdownDisplay = timer.querySelector('.countdown');
                countdownDisplay.innerHTML = `${ days } days ${ hours } hrs ${ minutes } mins ${ seconds } secs`;

                // If the countdown reaches zero, stop the timer and display "EXPIRED"
                if (timeDifference < 0) {
                    clearInterval(countdownInterval);
                    countdownDisplay.innerHTML = "EXPIRED";
                }
            }, 1000); // Update every second
        });
    }

    // Start the countdown function
    startCountdown();
</script>