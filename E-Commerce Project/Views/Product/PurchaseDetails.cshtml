@model IEnumerable<Entities.Orders>
@{
    ViewBag.Title = "Perfume | Purchase Details";
}

<h2>Purchase Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Get Bill</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.ProductData?.ProductName</td>
                    <td>@order.Quantity</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.OrderStatus</td>
                    <td>
                        <a asp-controller="Product" asp-action="PurchaseDetailsPDF" asp-route-orderID="@order.OrderID" class="btn btn-primary"><i class="fa-solid fa-file-invoice mr-2"></i>Get Bill</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No purchase details available.</td>
            </tr>
        }
    </tbody>
</table>
