@model ProductDataResponse
@{
    ViewBag.Title = "Perfume | Delete Product";
}
<style>
    input[type="text"], select {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
</style>
<h2>Delete Prodcut</h2>

<form asp-controller="Product" asp-action="DeleteProduct" method="post">

    <input type="hidden" asp-for="ProductID" />

    <!-- Product Name -->
    <div class="form-group mb-3">
        <label for="ProductName">Product Name</label>
        <input asp-for="ProductName" type="text" class="form-control" disabled="disabled">
        <div class="invalid-feedback">
            <span asp-validation-for="ProductName"></span>
        </div>
    </div>

    <!-- Category ID -->
    <div class="form-group mb-3">
        <label for="CategoryID">Category</label>
        <select asp-for="CategoryID" asp-items="ViewBag.ProductCategory" class="form-select" id="Category" name="CategoryID" disabled="disabled">
            <option value="">Choose Category</option>
            @*  @foreach (ProductCategoryResponse productCategory in ViewBag.ProductCategory)
            {
            <option value="@productCategory.CategoryID">@productCategory.CategoryName</option>
            } *@
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="CategoryID"></span>
        </div>
    </div>

    <!-- Price -->
    <div class="form-group mb-3">
        <label for="Price">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" id="Price" name="Price" disabled="disabled">
        <div class="invalid-feedback">
            <span asp-validation-for="Price"></span>
        </div>
    </div>

    <!-- Quantity -->
    <div class="form-group mb-3">
        <label for="Quantity">Quantity</label>
        <select asp-for="Quantity" class="form-select" id="Quantity" name="Quantity" disabled="disabled">
            <option value="" selected disabled>Choose quantity</option>
            <!-- Assuming ProductQuantityOptions is an enum with these values -->
            <option value="Small">Small (100ml)</option>
            <option value="Medium">Medium (200ml)</option>
            <option value="Large">Large (300ml)</option>
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="Quantity"></span>
        </div>
    </div>


    <!-- Submit Button -->
    <button type="submit" class="btn btn-danger">Delete Product</button>

    @if (ViewBag.Errors != null)
    {
        <div class="invalid-feedback">
            <ul>


                @foreach (string error in ViewBag.Errors)
                {
                    <li>
                        @error
                    </li>
                }
            </ul>
        </div>
    }
</form>
<!-- Client-Side Validation Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
